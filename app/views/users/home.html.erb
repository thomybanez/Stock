<div class='wallet-card'>
    

        <div class='wallet-text'>            
            My Balance
            <div class='wallet-button-wrapper'>
                <div class='wallet-button' style="background-color:green;"><%= link_to 'Deposit', new_path(transaction_type: 'deposit') %></div>
                <div class='wallet-button' style="background-color:transparent;"><%= link_to 'Withdraw', new_path(transaction_type: 'withdraw') %></div>
            </div>
        </div>
        

        <div class='wallet-card-inner'>

            <div class='wallet-card-inner-left'>
                <h6 class="opacity mt fs">Available Balance</h6>
                <div>
                    <span class='wallet-amount'>
                        <% if @user.wallet %>
                            â‚±<%= number_with_delimiter(@user.wallet.balance.to_i) %>                        
                        <% end %>
                    </span>
                
                </div>
            </div>      



            <div class='wallet-card-inner-right'>
                <h6 class="opacity" style="text-align:center; margin-top: 10px;">Transactions History</h6>
                <div style="height:100%; display: flex; align-items: flex-start; justify-content: center; overflow:scroll;">
                        <table>
                        <thead>
                                <tr>
                                    <th class="transaction-head">Type</th>
                                    <th class="transaction-head">Amount</th>
                                    <th class="transaction-head">Date</th>
                                </tr>
                        </thead>
                        <tbody>
                                <% Array(@transfer).each do |transfer| %>
                                <tr>
                                    <td class="transaction-body"><%= transfer.transaction_type %></td>
                                    <td class="transaction-body"><%= transfer.amount %></td>
                                    <td class="transaction-body"><%= transfer.created_at.strftime('%m-%d-%Y') %></td>
                                </tr>
                                <% end %>
                        </tbody>
                        </table>                    

                <div>
            </div>

        </div>
</div>
</div>




