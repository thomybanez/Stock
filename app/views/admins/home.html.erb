<h1>Admin</h1>

<table>
    <thead>
        <tr>
            <th>Email Address</th>
            <th>Admin</th>
            <th>Verified</th>
        </tr>
    </thead>

    <tbody>
        <% @user.each do |user| %>
            <tr>
                <td><%= user.email %></td>
                <td><%= user.is_admin %></td>
                <td><%= user.is_verified %></td>
                <td><%= button_to "Verify" %></td>
                <td><%= button_to "Make Admin" %></td>
            </tr>
        <% end %>
    </tbody>

</table>