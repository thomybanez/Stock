<div class="body_transactions">
<table class="table_transactions">
    <thead>
        <tr>
            <th>Coin</th>
            <th>Size</th>
            <th>Entry Price</th>
            <th>Exit Price</th>
            <th>Profit/Loss</th>
            <th>Transaction Date</th>
        </tr>
    </thead>
    <tbody>
        <% @trade.each do |t| %>
            <tr>
                <td><%= t.coin_id.capitalize %></td>
                <td><%= t.size %></td>
                <% if t.entry_price %>
                    <td><%= t.entry_price%></td>
                    <td></td>
                <% elsif t.exit_price %>
                    <td></td>
                    <td><%= t.exit_price %></td>
                <% end %>
                <td><%= number_to_currency(t.pnl) %></td>
                <td><%= t.created_at.in_time_zone('Asia/Manila').strftime('%m-%d-%Y %I:%M %p')%></td>
            </tr>
        <% end %>
    </tbody>
</table>
</div>